<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".loginpages.MainSignFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fafffa">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="197dp"
                android:layout_height="199dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.103"
                app:srcCompat="@drawable/dish" />

            <Button
                android:id="@+id/sign_in_main_button"
                style="@style/SignButtonStyle"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="40dp"
                android:text="@string/SignIn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView4"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <Button
                android:id="@+id/sign_up_main_button"
                style="@style/SignButtonStyle"
                android:layout_width="0dp"
                android:layout_height="58dp"
                android:layout_marginTop="20dp"
                android:text="@string/SignUp"
                app:layout_constraintEnd_toEndOf="@+id/sign_in_main_button"
                app:layout_constraintHorizontal_bias="0.496"
                app:layout_constraintStart_toStartOf="@+id/sign_in_main_button"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_main_button"
                tools:ignore="DuplicateSpeakableTextCheck" />

            <TextView
                android:id="@+id/google_label"
                style="@style/SignTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="104dp"
                android:layout_marginBottom="32dp"
                android:text="@string/google_label_text"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.495"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/sign_in_main_button"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</FrameLayout>